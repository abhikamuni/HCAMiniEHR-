@page
@model HCAMiniEHR.Pages.LabOrders.CreateModel
@{
    ViewData["Title"] = "Order Lab Test";
}

<div class="container mt-5">
    <div class="card shadow-sm" style="max-width: 500px; margin: 0 auto;">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">🧪 Order New Lab Test</h4>
        </div>
        <div class="card-body">
            <form method="post">
                <input type="hidden" asp-for="AppointmentId" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Test Name</label>
                    <select asp-for="TestName" class="form-select">
                        <option value="Complete Blood Count (CBC)">Complete Blood Count (CBC)</option>
                        <option value="Lipid Panel">Lipid Panel</option>
                        <option value="Vitamin D">Vitamin D</option>
                        <option value="Urinalysis">Urinalysis</option>
                        <option value="X-Ray">X-Ray</option>
                    </select>
                </div>

                <div class="alert alert-secondary">
                    <small>Status will be set to <strong>Pending</strong> automatically.</small>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-info text-white">Submit Order</button>
                    <a href="/Reports/Index" class="btn btn-light">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

