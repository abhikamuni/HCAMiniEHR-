@page
@model IndexModel
@{
    ViewData["Title"] = "Home Dashboard";
}

<div class="text-center mb-5">
    <h1 class="display-4 text-primary">🏥 HCAMiniEHR</h1>
    <p class="lead">Electronic Health Record Management System</p>
</div>

<div class="container">
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">👤</span>
                    </div>
                    <h5 class="card-title">Manage Patients</h5>
                    <p class="card-text text-muted">Register new patients, update details, or view history.</p>
                    <a href="/Patients/Index" class="btn btn-outline-primary stretched-link">Go to Patients</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">📅</span>
                    </div>
                    <h5 class="card-title">Book Appointment</h5>
                    <p class="card-text text-muted">Schedule a new visit for an existing patient.</p>
                    <a href="/Patients/Index" class="btn btn-outline-success stretched-link">Book Now</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow-sm border-0 hover-effect">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <span style="font-size: 3rem;">📊</span>
                    </div>
                    <h5 class="card-title">Analytics & Reports</h5>
                    <p class="card-text text-muted">View pending lab orders, doctor stats, and follow-ups.</p>
                    <a href="/Reports/Index" class="btn btn-outline-warning text-dark stretched-link">View Reports</a>
                </div>
            </div>
        </div>

    </div>

    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-center" role="alert">
                <div class="me-3" style="font-size: 1.5rem;">ℹ️</div>
                <div>
                    <strong>System Status:</strong> The Audit Log is active. All appointment changes are being tracked in the SQL Database.
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-effect {
        transition: transform 0.2s;
    }

        .hover-effect:hover {
            transform: translateY(-5px);
            background-color: #f8f9fa;
        }
</style>
