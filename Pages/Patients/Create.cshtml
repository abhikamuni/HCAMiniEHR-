@page
@model HCAMiniEHR.Pages.Patients.CreateModel
@{
    ViewData["Title"] = "Add New Patient";
}

<div class="container mt-4">
    <h2>Add New Patient</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form method="post">
              

                <div class="mb-3">
                    <label class="form-label">First Name</label>
                    <input asp-for="Patient.FirstName" class="form-control" placeholder="e.g. John" />
                    <span asp-validation-for="Patient.FirstName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Last Name</label>
                    <input asp-for="Patient.LastName" class="form-control" placeholder="e.g. Doe" />
                    <span asp-validation-for="Patient.LastName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Date of Birth</label>
                    <input asp-for="Patient.DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="Patient.DateOfBirth" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Gender</label>
                    <select asp-for="Patient.Gender" class="form-select">
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Patient.Email" type="email" class="form-control" placeholder="name@example.com" />
                    <span asp-validation-for="Patient.Email" class="text-danger"></span>
                </div>
                <div class=" mb-3">
                    <label class="form-label"> Phone Number</label>
                    <input asp-for="Patient.PhoneNumber" class="form-control" placeholder="e.g. (123) 456-7890" />
 

                </div>
                <button type="submit" class="btn btn-success">Save Patient</button>
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
