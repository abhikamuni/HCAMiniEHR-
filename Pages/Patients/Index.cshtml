@page
@model HCAMiniEHR.Pages.Patients.IndexModel
@{
    ViewData["Title"] = "Patient List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Patient Management</h2>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                <strong>Error:</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <a href="/Patients/Create" class="btn btn-primary">+ Add New Patient</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Date of Birth</th>
                        <th>Gender</th>
                        <th>Email</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.PatientList)
                    {
                        <tr>
                            <td>@p.PatientId</td>
                            <td>@p.FirstName @p.LastName</td>
                            <td>@p.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@p.Gender</td>
                            <td>@p.Email</td>
                            <td>
                                <a href="/Appointments/Create?patientId=@p.PatientId" class="btn btn-sm btn-success">Book Appt</a>
                                <a href="/Patients/Edit?id=@p.PatientId" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/Patients/Delete?id=@p.PatientId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

